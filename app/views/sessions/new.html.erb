<% provide(:title, "Kirjaudu sisään") %>
<h1>Kirjaudu sisään</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "Sähköposti" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Salasana" %>
      <%= f.password_field :password %>

      <%= f.submit "Kirjaudu", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Uusi äänestäjä? <%= link_to "Rekisteröidy nyt!", signup_path %></p>
  </div>
</div>
